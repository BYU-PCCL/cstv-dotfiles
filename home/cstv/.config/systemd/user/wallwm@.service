[Unit]
Description=The window manager for the wall
After=X11@%i.target picom@%i.service
Requires=X11@%i.target picom@%i.service
[Service]
Environment=DISPLAY=%I
Environment=CSTV_DISPLAY_LAYOUT=fullscreen
ExecStart=/usr/bin/env bash -c 'exec 8>${XDG_RUNTIME_DIR}/x11-wm@%I; exec python3 %h/dev/cstv-wm/wallwm.py'
[Install]
RequiredBy=X11@%i.target
